<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BasicTextRoboto" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/BLUEBase</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="NumberPickerCustomText">
        <item name="android:textSize">28sp</item> // add if you want to change size
        <item name="android:fontFamily">@font/bebas_neue</item> // add font (this font folder is present in res folder)
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BasicTextRobotoPink" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pinkBase</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="BasicTextRoboto24sp" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/pinkBase</item>
        <item name="android:fontFamily">@font/bebas_neue</item>
    </style>

    <style name="BottomNavViewStyle" parent="Theme.MaterialComponents.Light.DarkActionBar" >
        <item name="colorPrimary">@color/BLUEBase</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/pinkBase</item>
    </style>

</resources>